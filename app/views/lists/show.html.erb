
<div class="container">
  <div class="movie-content">
    <div class="row">

      <div class="col-lg-6">
        <h2><%= @list.name %></h2>
        <div class="btn-style">
          <p><%= link_to "Bookmark",  new_list_bookmark_path(@list), class: 'btn-book' %></p>
          <p><%= link_to "Edit", edit_list_path(@list), class: 'btn-edit' %></p>
        </div>
      </div>
    </div>
</div>

<div class="cards">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card">
      <div class="box-poster">
      <% if bookmark.movie.poster_url.present? %>
        <%= image_tag bookmark.movie.poster_url, alt:"movie image", width:100, height:800, class: "card-img-top" %>
          <% else %>
          <p class="card-text">No picture available</p>
        <% end %>
      </div>
      <div class=card-body>
        <h5 class="card-title"><%= bookmark.movie.title %></h5>
        <p class="card-text">Overview: <%= bookmark.movie.overview %></p>
        <p class="card-text">Rating: <%= bookmark.movie.rating %></p>
         <% if bookmark.comment.present? %>
          <p class="card-text">My comment: <%= bookmark.comment %></p>
            <% else %>
          <p class="card-text">No comment available</p>
        <% end %>
      </div>
        <!-- ici on va ajouter le lien du destroy sur notre bookmark qu'on parcours actuellement -->
        <%= link_to "Delete your comment", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-warning"%>
    </div>
  <% end %>
</div>
</div>
</div>
</div>
</div>
